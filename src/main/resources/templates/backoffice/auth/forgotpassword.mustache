{{> backoffice/auth/header}}


<div class="p-5">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-2">{{lang.forgotYourPassWord}}</h1>
        <p class="mb-4">{{lang.forgotYourPassWordDesc}}</p>
    </div>
    <form class="user">
        <div class="form-group">
            <input type="email" class="form-control form-control-user" id="exampleInputEmail"
                   aria-describedby="emailHelp" placeholder="{{lang.enterEmail}}">
        </div>
        <a href="login.html" class="btn btn-primary btn-user btn-block">
            {{lang.resetPassWord}}
        </a>
    </form>
    <hr>
    <div class="text-center">
        <a class="small" href="{{home}}/register">{{lang.createAnAccount}}</a>
    </div>
    <div class="text-center">
        <a class="small" href="{{home}}/login">{{lang.alreadyHaveAnAccount}}</a>
    </div>
</div>



{{> backoffice/auth/footer}}
