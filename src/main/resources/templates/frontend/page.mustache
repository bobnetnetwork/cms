{{> frontend/header}}

<main id="main">

    {{> frontend/breadcrumbs}}

    <!-- ======= Blog Section ======= -->
    <section class="blog" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container">

            <div class="row">

                <div class="col-lg-8 entries">

                    <article class="entry entry-single">
                        <div class="entry-img">
                            <img src="{{home}}/assets/img/blog-post-1.jpg" alt="" class="img-fluid">
                        </div>

                        <h2 class="entry-title">
                            <a href="#">{{page.title}}</a>
                        </h2>

                        <div class="entry-meta">
                            <ul>
                                <li class="d-flex align-items-center"><i class="icofont-user"></i> <a
                                        href="blog-single.html">{{page.author.firstName}}</a></li>
                                <li class="d-flex align-items-center"><i class="icofont-wall-clock"></i>
                                    <time class="date">{{page.addedAt}}</time>
                                </li>
                                <li class="d-flex align-items-center"><i class="icofont-comment"></i> <a
                                        href="blog-single.html">12
                                    Comments</a></li>
                            </ul>
                        </div>

                        <div class="entry-content">
                            {{{page.content}}}
                        </div>

                        <div class="entry-footer clearfix">
                            <div class="float-left">

                            </div>

                            <div class="float-right share">
                                <a href="" title="Share on Twitter"><i class="icofont-twitter"></i></a>
                                <a href="" title="Share on Facebook"><i class="icofont-facebook"></i></a>
                                <a href="" title="Share on Instagram"><i class="icofont-instagram"></i></a>
                            </div>

                        </div>

                    </article><!-- End blog entry -->

                    {{> frontend/authorBox}}

                </div><!-- End blog entries list -->

                {{> frontend/sidebar}}

            </div><!-- End row -->

        </div><!-- End container -->

    </section><!-- End Blog Section -->

</main><!-- End #main -->

{{> frontend/footer}}

