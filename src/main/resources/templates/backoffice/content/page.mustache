{{> backoffice/header}}
{{#page}}
    <form action="{{#add}}/admin/pages/new{{/add}}{{^add}}/admin/pages/{{article.slug}}{{/add}}" name="article"
          method="POST">
        <div class="row">
            <div class="col-lg-9">
                <div class="card mb-4">
                    <div class="card-header">
                        {{lang.title}}
                    </div>
                    <div class="card-body">
                        <input type="text" id="title" name="title" value="{{page.title}}" class="form-control">
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        {{lang.content}}
                    </div>
                    <div class="card-body">
                        <textarea class="form-control" id="contentEditor" name="content"
                                  rows="10">{{page.content}}</textarea>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="card mb-4">
                    <div class="card-header">
                        {{lang.general}}
                    </div>
                    <div class="card-body">
                        <p><b>{{lang.author}}: </b>{{page.author.firstName}} {{page.author.lastName}}</p>
                        <a href="#" class="btn btn-info btn-icon-split">
                    <span class="icon text-white-50">
                      <i class="fas fa-info-circle"></i>
                    </span>
                            <span class="text">{{lang.saveAsDraft}}</span>
                        </a>
                        <div class="my-2"></div>
                        <a href="#" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                      <i class="fas fa-check"></i>
                    </span>
                            <span class="text">{{lang.publish}}</span>
                        </a>
                        <a href="#" class="btn btn-danger btn-icon-split">
                    <span class="icon text-white-50">
                      <i class="fas fa-trash"></i>
                    </span>
                            <span class="text">{{lang.delete}}</span>
                        </a>
                        <br/>
                        <input type="submit" value="{{#add}}Publish{{/add}}{{^add}}Update{{/add}}"
                               class="btn btn-success btn-icon-split"/>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        {{lang.featuredImage}}
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 25rem;"
                                 src="../../{{page.featuredImage}}" alt="featured image">
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        {{lang.excerpt}}
                    </div>
                    <div class="card-body">
                        <textarea class="form-control" id="exampleFormControlTextarea2"
                                  rows="10">{{#errorMessage}}{{errorMessage}}{{/errorMessage}}</textarea>
                    </div>
                </div>
            </div>
        </div>
    </form>

{{/page}}
<div class="error">{{#errorMessage}}{{errorMessage}}{{/errorMessage}}</div>
{{> backoffice/footer}}
