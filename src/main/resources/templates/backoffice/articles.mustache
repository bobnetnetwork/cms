{{> backoffice/header}}


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Created At</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Created At</th>
                </tr>
                </tfoot>
                <tbody>
                {{#articles}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="../admin/articles/{{slug}}">{{title}}</a></td>
                    <td><a href="../admin/users/{{author.userName}}">{{author.firstName}} {{author.lastName}}</a></td>
                    <td>{{addedAt}}</td>
                </tr>
                {{/articles}}
                </tbody>
            </table>
        </div>
    </div>
</div>




{{> backoffice/footer}}